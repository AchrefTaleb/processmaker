{
    "openapi": "3.0.0",
    "info": {
        "title": "ProcessMaker API",
        "description": "",
        "contact": {
            "email": "info@processmaker.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://bpm4.processmaker.local/api/1.0"
        }
    ],
    "paths": {
        "/processes": {
            "get": {
                "tags": [
                    "Process"
                ],
                "summary": "Returns all processes that the user has access to",
                "operationId": "getProcesses",
                "parameters": [
                    {
                        "name": "filter",
                        "in": "query",
                        "description": "Filter results with a string. Searches Name, Description, and Status",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "list of processes",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Process"
                                            }
                                        },
                                        "meta": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/metadata"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "pm-api": []
                    }
                ]
            }
        },
        "/processes/{processUuid}": {
            "get": {
                "tags": [
                    "Process"
                ],
                "summary": "Get single process by ID",
                "operationId": "getProcessByUuid",
                "parameters": [
                    {
                        "name": "processUuid",
                        "in": "path",
                        "description": "ID of process to return",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully found the process",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Process"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "pm-api": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "metadata": {
                "properties": {
                    "per_page": {
                        "type": "integer"
                    }
                },
                "type": "object"
            },
            "Process": {
                "properties": {
                    "uuid": {
                        "description": "Represents a business process definition.",
                        "type": "string"
                    },
                    "process_category_uuid": {
                        "description": "Represents a business process definition.",
                        "type": "string"
                    },
                    "user_uuid": {
                        "description": "Represents a business process definition.",
                        "type": "string"
                    },
                    "bpmn": {
                        "description": "Represents a business process definition.",
                        "type": "string"
                    },
                    "name": {
                        "description": "Represents a business process definition.",
                        "type": "string"
                    },
                    "description": {
                        "description": "Represents a business process definition.",
                        "type": "string"
                    },
                    "status": {
                        "description": "Represents a business process definition.",
                        "type": "string",
                        "enum": [
                            "ACTIVE",
                            "INACTIVE"
                        ]
                    },
                    "created_at": {
                        "description": "Represents a business process definition.",
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "description": "Represents a business process definition.",
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "pm-api": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    }
}